#include<bits/stdc++.h>
using namespace std;



struct Student{
	int roll;
	int marks;
	string name;
	int rank;
} s[100];

int main(){
	int n;
	cin>>n;
	for(int i=0;i<n;i++){
		cin>>s[i].roll>>s[i].name>>s[i].marks;
	}
	//sort(s->marks,s->marks+n);
	printf("Roll | Name | Marks\n");
	printf("-----------------------------\n");
	for(int j=0;j<n;j++){
		cout<<s[j].roll<<" | "<<s[j].name<<" | "<<s[j].marks<<endl;
	}
	return 0;
}
